@import '../bootstrap'
@import '../theme'

/* Themes */
v-sheet($material)
  background-color: $material.cards
  border-color: $material.cards
  color: $material.text.primary

theme(v-sheet, "v-sheet")

.v-sheet
  display: block
  border-radius: $sheet-border-radius
  position: relative
  transition: $primary-transition

  &--tile
    border-radius: 0
